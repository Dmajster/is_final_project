@using MusicShare.Models

@{
    ViewData["Title"] = "Home Page";
}

@foreach (var post in (IEnumerable<Post>)@ViewData["Posts"])
{
    <div class="card-columns">
        <div class="card">
            <div class="card-img" style="background-image:url('https://img.youtube.com/vi/ltLifPLeWck/0.jpg'); height:250px;"></div>
            <div class="card-body">
                <div class="card-title"><h2>@post.Song.Name</h2></div>
                <h5>@post.Artist.Name</h5>

            </div>
            <div class="card-footer">@post.ViewCount</div>
        </div>
    </div>
}


